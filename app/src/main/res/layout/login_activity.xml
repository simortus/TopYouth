<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".login.LoginActivity">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/loading_layout"
        android:background="@color/shadow_back"
        android:visibility="invisible"
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/loadingBar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            android:progressTint="@color/blue_darkish"
            app:layout_constraintVertical_bias="0.3" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/login_layout"
        android:background="@color/fade_grey"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/top_youth_logo"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/top_youth_logo_icone"
            android:layout_width="120dp"
            android:layout_marginTop="?actionBarSize"
            android:layout_height="120dp"/>

        <TextView
            android:id="@+id/registerTitl"
            android:text="@string/memebers_login_here"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:layout_below="@id/top_youth_logo"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:fontFamily="monospace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/progress_bar"
            android:layout_centerInParent="true"
            android:progressTint="@color/blue_darkish"
            android:visibility="invisible"
            android:layout_width="120dp"
            android:layout_height="120dp"/>

        <EditText
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_centerInParent="true"
            android:background="@drawable/white_rectangle_white_backg_sharpe_edge"
            android:shadowColor="@color/grey"
            android:shadowRadius="1"
            android:elevation="4dp"
            android:hint="@string/type_in_your_email"
            android:textAlignment="center"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:padding="5dp"
            android:id="@+id/email_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>

        <EditText
            android:id="@+id/pass_field"
            android:layout_marginTop="5dp"
            android:hint="@string/type_in_your_password"
            android:textAlignment="center"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:inputType="textPassword"
            android:maxLines="1"
            android:background="@drawable/white_rectangle_white_backg_sharpe_edge"
            android:padding="5dp"
            android:minEms="8"
            android:maxEms="30"
            android:layout_below="@id/email_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>


        <Button
            android:id="@+id/button_login"
            android:text="@string/login"
            android:textAllCaps="false"
            android:layout_below="@id/pass_field"
            android:layout_centerHorizontal="true"
            android:elevation="4dp"
            android:background="@drawable/button_design_selector_blue"
            android:layout_marginTop="20dp"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:onClick="onClick"
            />

        <TextView
            android:id="@+id/textViewforgot_pass"
            android:text="@string/forgotten_password_click_here"
            android:textStyle="italic"
            android:onClick="onClick"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="?actionBarSize"
            android:layout_below="@id/button_login"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:focusable="true"
            android:clickable="true"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/textView_register_new_user"
            android:text="@string/have_no_account"
            android:textStyle="italic"
            android:onClick="onClick"
            android:layout_marginTop="?actionBarSize"
            android:layout_below="@id/textViewforgot_pass"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:focusable="true"
            android:clickable="true"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    </FrameLayout>
</LinearLayout>