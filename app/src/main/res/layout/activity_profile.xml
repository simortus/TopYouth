<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:context=".user_profile.UserProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <include layout="@layout/bottom_nav_layout" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/profilePic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:background="@drawable/user"
                android:onClick="onClick" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                app:buttonGravity="center_vertical"
                app:collapseIcon="@drawable/comment_icone1"
                app:titleTextColor="@color/blue_darkish" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/saveButton"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_below="@id/user_status"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:background="@drawable/button_design_selector_round_blue"
                android:fontFamily="@font/arimo"
                android:onClick="onClick"
                android:text="@string/apply_changes"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="invisible">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profilePic"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto"
                android:text="@string/topUser"
                android:textStyle="bold" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/user_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profilePic"
                android:layout_alignBaseline="@id/username"
                android:layout_toEndOf="@id/username"
                android:fontFamily="@font/rosarivo"
                android:padding="5dp"
                android:text="@string/status"
                android:textSize="8sp"
                android:textStyle="italic" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:background="@drawable/white_rectangle_white_backg_sharpe_edge">

            <GridView
                android:id="@+id/gridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:gravity="center"
                android:numColumns="3"
                tools:listitem="@layout/layout_grid_imageview">

            </GridView>

        </RelativeLayout>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="?actionBarSize"
        android:background="@drawable/round_edge_rectangle_button_recycler_view"
        android:elevation="10dp"
        android:fadingEdge="horizontal|vertical"
        android:fontFamily="@font/arimo"
        android:foregroundGravity="center"
        android:onClick="onClick"
        android:requiresFadingEdge="horizontal"
        app:headerLayout="@layout/layout_nav_header"
        app:itemHorizontalPadding="5dp"
        app:itemTextColor="@color/blue_dark"
        app:menu="@menu/nav_bar_menu"
        tools:context=".user_profile.User_Profile">

    </com.google.android.material.navigation.NavigationView> <!---->

</androidx.drawerlayout.widget.DrawerLayout>
