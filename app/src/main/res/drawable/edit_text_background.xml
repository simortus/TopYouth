<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="@color/white"
                android:centerColor="@color/fade_grey"
                android:endColor="@color/white"
                android:angle="45"

                />
            <corners
                android:radius="5dp">
            </corners>
            <stroke
                android:width="1dp"
                android:color="@color/blue_darkish">

            </stroke>
        </shape>


    </item>

</selector>